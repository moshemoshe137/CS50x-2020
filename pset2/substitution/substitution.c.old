#include <cs50.h>
#include <stdio.h>
#include <ctype.h>
#include <string.h>

bool is_valid_key(string key);
string string_to_lower(string key);
string string_to_upper(string key);

int main(int argc, string argv[])
{
    if (argc != 2)
    {
        printf("Usage: ./substitution key\n");
    }
    string key = argv[1];
    //printf("%s", key);
    
    string key_upper = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    string key_lower = "abcdefghijklmnopqrstuvwxyz";
    
    strcpy(key_upper, string_to_upper(key));
    strcpy(key_lower, string_to_lower(key));
    
    printf("%s\n%s\n", key_upper, key_lower);
}

string string_to_upper(string key)
{
    int n = strlen(key);
    for (int i = 0; i < n; i++)
    {
        key[i] = toupper(key[i]);
    }
    return key;
}

string string_to_lower(string key)
{
    int n = strlen(key);
    for (int i = 0; i < n; i++)
    {
        key[i] = tolower(key[i]);
    }
    return key;
}


bool is_valid_key(string key)
{
    int n = strlen(key);
    
    // check if key is the right length
    if (n != 26)
    {
        return false;
    }
    
    //check each character to ensure it's a letter
    for (int i = 0; i < n; i++)
    {
        char letter = toupper(key[i]);
        if (letter < 65 || letter > 90)
        {
            return false;
        }
    }
    return true;
}